@model EventLab.Models.Event

@{ ViewBag.Title = "Edit Event"; }

<h2>Edit Event</h2>
<div class="form">

    <form asp-action="Edit" class="form-horizontal">
        <input type="hidden" asp-for="EventID" />
        <div class="form-group">
            <label asp-for="Month" class="col-sm-2 sontrol-label"></label>
            <div class="col-sm-10">
                <input asp-for="Month" class="form-control" autofocus />
                <span asp-validation-for="Month" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Day" class="col-sm-2 sontrol-label"></label>
            <div class="col-sm-10">
                <input asp-for="Day" class="form-control" autofocus />
                <span asp-validation-for="Day" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Year" class="col-sm-2 sontrol-label"></label>
            <div class="col-sm-10">
                <input asp-for="Year" class="form-control" autofocus />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Time" class="col-sm-2 sontrol-label"></label>
            <div class="col-sm-10">
                <input asp-for="Time" class="form-control" autofocus />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Location" class="col-sm-2 sontrol-label"></label>
            <div class="col-sm-10">
                <input asp-for="Location" class="form-control" autofocus />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Genre" class="col-sm-2 sontrol-label"></label>
            <div class="col-sm-10">
                <input asp-for="Genre" class="form-control" autofocus />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn-success btn-lg" />
                <a class="btn btn-default" href="http://localhost:64471/Create/">Back To Your Events</a>
            </div>
        </div>
    </form>
</div>